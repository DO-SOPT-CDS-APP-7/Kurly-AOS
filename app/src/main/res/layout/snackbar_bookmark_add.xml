<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bookmark_snackbar"
    android:paddingHorizontal="22dp"
    android:paddingVertical="14dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_snackbar_bookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_snackbar_bookmark_plus_ment"
            style="@style/AndroidTitleSemibold14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/snackbar_bookmark_plus_ment"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_snackbar_bookmark_go_ment"
            style="@style/AndroidTitleSemibold14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/snackbar_bookmark_go_ment"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_snackbar_go"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_snackbar_go"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>