<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toast_container">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="348dp"
            android:layout_height="44dp"
            android:background="#333333"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_toast_bookmark_plus_ment"
                style="@style/AndroidTitleSemibold14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:text="@string/snackbar_bookmark_plus_ment"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_toast_bookmark_go_ment"
                style="@style/AndroidTitleSemibold14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/snackbar_bookmark_go_ment"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_toast_go"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_toast_go"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="18dp"
                android:src="@drawable/ic_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>