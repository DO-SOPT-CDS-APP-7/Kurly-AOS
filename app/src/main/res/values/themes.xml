<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChicoryAOS" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ku_purple</item>
        <item name="colorPrimaryVariant">@color/ku_background_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Remove font padding. -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRadius2and5" parent="">
        <item name="cornerSize">2.5dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRadius4" parent="">
        <item name="cornerSize">4dp</item>
    </style>

</resources>